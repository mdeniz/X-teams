<div role="tabpanel" class="tab-pane active" id="info">
  <% if @entity.is_a? Mutant %>
      <h4>Aliases</h4>
        <ul class="list-group">
          <li class="list-group-item">
            <%= @entity.aliases %>
          </li>
        </ul>
        <h4>Info</h4>
        <ul class="list-group">
          <li class="list-group-item">
            <span class="badge"><%= @entity.place_of_birth %></span>
            Place of Birth
          </li>
          <li class="list-group-item">
            <span class="badge"><%= @entity.identity %></span>
            Identity
          </li>
        </ul>
        <h4>Physical attributes</h4>
        <div class="row">
          <div class="col-sm-8 col-md-6">
            <ul class="list-group">
              <li class="list-group-item">
                <span class="badge"><%= @entity.height %> cm.</span>
                Height
              </li>
              <li class="list-group-item">
                <span class="badge"><%= @entity.weight %> kg.</span>
                Weight
              </li>

              <li class="list-group-item">
                <span class="badge"><%= @entity.skintone %></span>
                Skintone
              </li>
            </ul>
          </div>
          <div class="col-sm-8 col-md-6">
            <li class="list-group-item">
              <span class="badge"><%= @entity.eyes %></span>
              Eyes
            </li>
            <li class="list-group-item">
              <span class="badge"><%= @entity.hair %></span>
              Hair
            </li>
          </div>
        </div>
    <% elsif @entity.is_a? Team %>
      <h3>Description</h3>
      <%= raw @entity.description %>
    <% end %>
    <h4><%= (@entity.is_a? Team) ? 'Mutant\'s ' : ''%>Powers</h4>
    <br/>
    <% @entity.powers.each_with_index do |power, i| %>
        <%= raw show_tag(power, i)%>
    <% end %>
</div>