<%= form_for(@mutant, :html => { :multipart => true }) do |f| %>
    <%= errors_for(@mutant) %>
    <div class="row">

        <div class="form-group col-sm-6 col-md-4">
          <%= f.label :name, class: 'control-label' %>
          <%= f.text_field :name, class: "form-control", placeholder: 'Mutant Name' %>
        </div>

        <div class="form-group col-sm-6 col-md-4">
            <%= f.label :real_name, class: 'control-label' %>
            <%= f.text_field :real_name, class: "form-control", placeholder: 'Person Name' %>
        </div>

        <div class="form-group col-sm-6 col-md-4">
            <%= f.label :aliases, class: 'control-label' %>
            <%= f.text_field :aliases, class: "form-control", placeholder: 'Coma separated Aliases' %>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-6 col-md-6">
            <%= f.label :email, class: 'control-label' %>
            <%= f.email_field :email, class: "form-control", placeholder: 'Just professional emails' %>
        </div>

        <div class="form-group col-sm-6 col-md-6">
            <%= f.label :mobile, class: 'control-label' %>
            <%= f.text_field :mobile, class: "form-control", placeholder: '+XX XXX.XXX.XXX' %>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-6 col-md-6">
            <%= f.label :place_of_birth, class: 'control-label' %>
            <%= f.text_field :place_of_birth, class: "form-control", placeholder: 'City, Province, Country' %>
        </div>

        <div class="form-group col-sm-6 col-md-6">
            <%= f.label :identity, class: 'control-label' %>
            <%= f.text_field :identity, class: "form-control", placeholder: 'Publicy know, Secret, ...' %>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-6 col-md-4">
            <%= f.label :eyes, class: 'control-label' %>
            <%= f.text_field :eyes, class: "form-control", placeholder: 'Eyes color' %>
        </div>


        <div class="form-group col-sm-6 col-md-4">
            <%= f.label :hair, class: 'control-label' %>
            <%= f.text_field :hair, class: "form-control", placeholder: 'Hair color' %>
        </div>
        <div class="form-group col-sm-6 col-md-4">
            <%= f.label :skintone, class: 'control-label' %>
            <%= f.text_field :skintone, class: "form-control", placeholder: 'Skin color' %>
        </div>

        <div class="form-group col-sm-6 col-md-6 number">
            <%= f.label :height, class: 'control-label' %>
            <%= f.number_field :height, min: 0, class: "form-control", placeholder: 'In cm.' %>
        </div>
        <div class="form-group col-sm-6 col-md-6 number">
            <%= f.label :weight, class: 'control-label' %>
            <%= f.number_field :weight, min: 0, class: "form-control", placeholder: 'In kg.' %>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-12">
            <%= f.label :biography, class: 'control-label' %>
            <%= f.text_area :biography, class: "form-control", rows: 6, placeholder: 'Medium text about the mutant...' %>
        </div>
        <div class="form-group col-sm-12">
            <%= f.label :more_info_link, class: 'control-label' %>
            <%= f.text_field :more_info_link, class: "form-control", placeholder: 'Url to the complete biography' %>
        </div>
        <div class="form-group col-sm-12">
            <%= f.label :image, class: 'control-label'  %>
            <%= file_field :mutant, :image %>
        </div>
    </div>


    <div class="actions btn-group" role="group" aria-label="...">
      <%= f.submit class: "btn btn-primary" %>
          <%= link_to mutants_path,  class: "btn btn-success", role: "button" do %>
              <span class="glyphicon glyphicon-th-list"></span> Back to Mutants
          <% end %>
    </div>
<% end %>

