<div class="btn-group float_relative" role="group" aria-label="...">
  <%= link_to entity, class: "btn btn-default", role: "button", title: 'Show Mutant' do %>
      <span class="glyphicon glyphicon-eye-open"></span>
  <% end %>
  <%= link_to edit_mutant_path(entity), class: "btn btn-default", role: "button", title: 'Edit Mutant' do %>
      <span class="glyphicon glyphicon-pencil"></span>
  <% end if @entity.is_a?(Mutant) %>
  <%= link_to entity, method: :delete, data: {confirm: 'Are you sure?' },
      class: "btn btn-danger", role: "button", title: 'Remove Mutant' do %>
      <span class="glyphicon glyphicon-remove"></span>
  <% end if @entity.is_a?(Mutant) && !entity.is_professor_xavier %>
  <%= link_to mutant_team_path(entity, @entity),
            method: :delete,
            data: {confirm: 'Are you sure? Do you want to remove from the Team that Mutant?' },
            remote: true,
            data_action: 'remove_from_team',
            class: "btn btn-danger", role: "button", title: 'Remove Mutant from the Team' do %>
      <span class="glyphicon glyphicon-log-out"></span>
  <% end if @entity.is_a?(Team) %>
</div>